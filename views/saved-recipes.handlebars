<a href="/search-recipes" class="btn">Search For New Recipe</a>

{{#if recipes.length}}
<section id="saved-recipe-container">
  <h2 class="section-header">My Recipes</h2>
  <ul id="saved-recipes">
    {{#each recipes as |recipe|}}
    <li>
      <div class="recipe-line" id="{{id}}">
        <div>
          <a href="{{recipe_url}}" class="recipe-title" target="_blank">{{title}}</a>
        </div>
        <div id="recipe-url" class="url">
          ({{format_url recipe_url}})
        </div>
        <button class="delete-recipe-btn btn delete-btn" id="{{id}}">Delete</button>
      </div>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}


<script src="/javascript/delete-recipe.js"></script>